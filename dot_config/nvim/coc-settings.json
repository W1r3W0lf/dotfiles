{
	"languageserver": {
		"ccls": {
			"command": "ccls",
			"filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
			"rootPatterns": [".ccls-root", "compile_commands.json"],
			"initializationOptions": {
				"cache": {
					"directory": ".ccls-cache"
				},
				"client": {
					"snippetSupport": true
				}
			}
		},
		"clojure-lsp": {
			"command": "clojure-lsp",
			"filetypes": ["clojure"],
			"rootPatterns": ["project.clj"],
			"additionalSchemes": ["jar", "zipfile"],
			"trace.server": "verbose",
			"initializationOptions": {
			}

		}
	}
}
